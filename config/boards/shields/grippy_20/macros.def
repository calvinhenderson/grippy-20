#define MTAP(NAME, FIRST, BINDINGS) \
  macro__S_##NAME: ms##NAME { \
    compatible = "zmk,behavior-macro"; \
    #binding-cells = <0>; \
    bindings \
      = <&macro_press &kp LSHFT> \
      , <&macro_tap FIRST> \
      , <&macro_release &kp LSHFT> \
      , <&macro_tap BINDINGS>; \
  }; \
  macro__##NAME: m##NAME { \
    compatible = "zmk,behavior-macro"; \
    #binding-cells = <0>; \
    bindings = <&macro_tap FIRST BINDINGS>; \
  };

